<div>
  <div>
    <h1>
      Computer Cases
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Case
    </h2>

    <form action="/insert_case_datum" method="post">
      <div>
        <label for="case_id_box">
          Case
        </label>

        <input type="text" id="case_id_box" name="query_case_id">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="size_box">
          Size
        </label>

        <input type="text" id="size_box" name="query_size">
      </div>

      <div>
        <label for="color_box">
          Color
        </label>

        <input type="text" id="color_box" name="query_color">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Add Case
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Brand
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Size
        </th>

        <th>
          Color
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_case_data.each do |a_case_datum| %>
      <tr>

        <td>
          <%= a_case_datum.brand %>
        </td>

        <td>
          <%= a_case_datum.name %>
        </td>

        <td>
          <%= a_case_datum.price %>
        </td>

        <td>
          <%= a_case_datum.size %>
        </td>

        <td>
          <%= a_case_datum.color %>
        </td>

        <td>
          <img src="<%= a_case_datum.image %>" width="100" height="65">
        </td>

        <td>
          <a href="/case_data/<%= a_case_datum.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
