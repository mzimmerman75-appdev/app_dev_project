<div>
  <div>
    <h1>
      Case datum #<%= @the_case_datum.id %> details
    </h1>

    <div>
      <div>
        <a href="/case_data">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_case_datum/<%= @the_case_datum.id %>">
          Delete case datum
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Case
      </dt>
      <dd>
        <%= @the_case_datum.case_id %>
      </dd>

      <dt>
        Part type
      </dt>
      <dd>
        <%= @the_case_datum.part_type %>
      </dd>

      <dt>
        Brand
      </dt>
      <dd>
        <%= @the_case_datum.brand %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_case_datum.name %>
      </dd>

      <dt>
        Item number
      </dt>
      <dd>
        <%= @the_case_datum.item_number %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_case_datum.price %>
      </dd>

      <dt>
        Size
      </dt>
      <dd>
        <%= @the_case_datum.size %>
      </dd>

      <dt>
        Color
      </dt>
      <dd>
        <%= @the_case_datum.color %>
      </dd>

      <dt>
        Link
      </dt>
      <dd>
        <%= @the_case_datum.link %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_case_datum.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_case_datum.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_case_datum.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit case datum
    </h2>

    <form action="/modify_case_datum/<%= @the_case_datum.id %>"  method="post" >
      <div>
        <label for="case_id_box">
          Case
        </label>

        <input type="text" id="case_id_box" name="query_case_id" value="<%= @the_case_datum.case_id %>">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type" value="<%= @the_case_datum.part_type %>">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand" value="<%= @the_case_datum.brand %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_case_datum.name %>">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number" value="<%= @the_case_datum.item_number %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_case_datum.price %>">
      </div>

      <div>
        <label for="size_box">
          Size
        </label>

        <input type="text" id="size_box" name="query_size" value="<%= @the_case_datum.size %>">
      </div>

      <div>
        <label for="color_box">
          Color
        </label>

        <input type="text" id="color_box" name="query_color" value="<%= @the_case_datum.color %>">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link" value="<%= @the_case_datum.link %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_case_datum.image %>">
      </div>

      <button>
        Update case datum
      </button>
    </form>
  </div>
</div>

<hr>
