<div>
  <div>
    <h2>
      Edit This Processor
    </h2>

    <form action="/modify_cpu_datum/<%= @the_cpu_datum.id %>"  method="post" >
      <div>
        <label for="cpu_id_box">
          Cpu
        </label>

        <input type="text" id="cpu_id_box" name="query_cpu_id" value="<%= @the_cpu_datum.cpu_id %>">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type" value="<%= @the_cpu_datum.part_type %>">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand" value="<%= @the_cpu_datum.brand %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_cpu_datum.name %>">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number" value="<%= @the_cpu_datum.item_number %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_cpu_datum.price %>">
      </div>

      <div>
        <label for="cores_box">
          Cores
        </label>

        <input type="text" id="cores_box" name="query_cores" value="<%= @the_cpu_datum.cores %>">
      </div>

      <div>
        <label for="threads_box">
          Threads
        </label>

        <input type="text" id="threads_box" name="query_threads" value="<%= @the_cpu_datum.threads %>">
      </div>

      <div>
        <label for="base_clock_box">
          Base clock
        </label>

        <input type="text" id="base_clock_box" name="query_base_clock" value="<%= @the_cpu_datum.base_clock %>">
      </div>

      <div>
        <label for="boost_clock_box">
          Boost clock
        </label>

        <input type="text" id="boost_clock_box" name="query_boost_clock" value="<%= @the_cpu_datum.boost_clock %>">
      </div>

      <div>
        <label for="l3_cache_box">
          L3 cache
        </label>

        <input type="text" id="l3_cache_box" name="query_l3_cache" value="<%= @the_cpu_datum.l3_cache %>">
      </div>

      <div>
        <label for="socket_box">
          Socket
        </label>

        <input type="text" id="socket_box" name="query_socket" value="<%= @the_cpu_datum.socket %>">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link" value="<%= @the_cpu_datum.link %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_cpu_datum.image %>">
      </div>

      <button>
        Update Processor
      </button>
    </form>
  </div>
</div>

<hr>
