<div>
  <div>
    <h1>
      Motherboards
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Motherboard
    </h2>

    <form action="/insert_mobo_datum" method="post">
      <div>
        <label for="mobo_id_box">
          Motherboard
        </label>

        <input type="text" id="mobo_id_box" name="query_mobo_id">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="socket_box">
          Socket
        </label>

        <input type="text" id="socket_box" name="query_socket">
      </div>

      <div>
        <label for="chipset_box">
          Chipset
        </label>

        <input type="text" id="chipset_box" name="query_chipset">
      </div>

      <div>
        <label for="size_box">
          Size
        </label>

        <input type="text" id="size_box" name="query_size">
      </div>

      <div>
        <label for="ram_box">
          Ram
        </label>

        <input type="text" id="ram_box" name="query_ram">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Add Motherboard
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Brand
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Socket
        </th>

        <th>
          Chipset
        </th>

        <th>
          Size
        </th>

        <th>
          Ram
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_mobo_data.each do |a_mobo_datum| %>
      <tr>

        <td>
          <%= a_mobo_datum.brand %>
        </td>

        <td>
          <%= a_mobo_datum.name %>
        </td>

        <td>
          <%= a_mobo_datum.price %>
        </td>

        <td>
          <%= a_mobo_datum.socket %>
        </td>

        <td>
          <%= a_mobo_datum.chipset %>
        </td>

        <td>
          <%= a_mobo_datum.size %>
        </td>

        <td>
          <%= a_mobo_datum.ram %>
        </td>


        <td>
          <img src="<%= a_mobo_datum.image %>" width="100" height="65">
        </td>

        <td>
          <a href="/mobo_data/<%= a_mobo_datum.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
