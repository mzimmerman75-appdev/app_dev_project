<div>
  <div>
    <h1>
      <%= @the_mobo_datum.name %> Details
    </h1>

    <div>
      <div>
        <a href="/mobo_data">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_mobo_datum/<%= @the_mobo_datum.id %>">
          Delete Motherboard
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Mobo
      </dt>
      <dd>
        <%= @the_mobo_datum.mobo_id %>
      </dd>

      <dt>
        Brand
      </dt>
      <dd>
        <%= @the_mobo_datum.brand %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_mobo_datum.name %>
      </dd>

      <dt>
        Item number
      </dt>
      <dd>
        <%= @the_mobo_datum.item_number %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_mobo_datum.price %>
      </dd>

      <dt>
        Socket
      </dt>
      <dd>
        <%= @the_mobo_datum.socket %>
      </dd>

      <dt>
        Chipset
      </dt>
      <dd>
        <%= @the_mobo_datum.chipset %>
      </dd>

      <dt>
        Size
      </dt>
      <dd>
        <%= @the_mobo_datum.size %>
      </dd>

      <dt>
        Ram
      </dt>
      <dd>
        <%= @the_mobo_datum.ram %>
      </dd>

      <dt>
        Link
      </dt>
      <dd>
        <a href="<%= @the_mobo_datum.link %>"> Part Link</a>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_mobo_datum.image %>" width="350" height="225">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_mobo_datum.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_mobo_datum.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit This Motherboard
    </h2>

    <form action="/modify_mobo_datum/<%= @the_mobo_datum.id %>"  method="post" >
      <div>
        <label for="mobo_id_box">
          Motherboard
        </label>

        <input type="text" id="mobo_id_box" name="query_mobo_id" value="<%= @the_mobo_datum.mobo_id %>">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand" value="<%= @the_mobo_datum.brand %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_mobo_datum.name %>">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number" value="<%= @the_mobo_datum.item_number %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_mobo_datum.price %>">
      </div>

      <div>
        <label for="socket_box">
          Socket
        </label>

        <input type="text" id="socket_box" name="query_socket" value="<%= @the_mobo_datum.socket %>">
      </div>

      <div>
        <label for="chipset_box">
          Chipset
        </label>

        <input type="text" id="chipset_box" name="query_chipset" value="<%= @the_mobo_datum.chipset %>">
      </div>

      <div>
        <label for="size_box">
          Size
        </label>

        <input type="text" id="size_box" name="query_size" value="<%= @the_mobo_datum.size %>">
      </div>

      <div>
        <label for="ram_box">
          Ram
        </label>

        <input type="text" id="ram_box" name="query_ram" value="<%= @the_mobo_datum.ram %>">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link" value="<%= @the_mobo_datum.link %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_mobo_datum.image %>">
      </div>

      <button>
        Update Motherboard
      </button>
    </form>
  </div>
</div>

<hr>
