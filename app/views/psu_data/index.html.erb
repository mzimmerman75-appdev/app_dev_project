<div>
  <div>
    <h1>
      Power Supplies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new Power Supply
    </h2>

    <form action="/insert_psu_datum" method="post">
      <div>
        <label for="psu_id_box">
          Psu
        </label>

        <input type="text" id="psu_id_box" name="query_psu_id">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="wattage_box">
          Wattage
        </label>

        <input type="text" id="wattage_box" name="query_wattage">
      </div>

      <div>
        <label for="certification_box">
          Certification
        </label>

        <input type="text" id="certification_box" name="query_certification">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Add PSU
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Brand
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Wattage
        </th>

        <th>
          Certification
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_psu_data.each do |a_psu_datum| %>
      <tr>

        <td>
          <%= a_psu_datum.brand %>
        </td>

        <td>
          <%= a_psu_datum.name %>
        </td>

        <td>
          <%= a_psu_datum.price %>
        </td>

        <td>
          <%= a_psu_datum.wattage %>
        </td>

        <td>
          <%= a_psu_datum.certification %>
        </td>

        <td>
          <img src="<%= a_psu_datum.image %>" width="100" height="65">
        </td>

        <td>
          <a href="/psu_data/<%= a_psu_datum.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
