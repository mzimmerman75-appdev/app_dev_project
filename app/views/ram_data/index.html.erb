<div>
  <div>
    <h1>
      List of all Memory
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add new Memory
    </h2>

    <form action="/insert_ram_datum" method="post">
      <div>
        <label for="ram_id_box">
          Ram
        </label>

        <input type="text" id="ram_id_box" name="query_ram_id">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type">
      </div>

      <div>
        <label for="series_box">
          Series
        </label>

        <input type="text" id="series_box" name="query_series">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="mem_speed_box">
          Memory speed
        </label>

        <input type="text" id="mem_speed_box" name="query_mem_speed">
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="text" id="capacity_box" name="query_capacity">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Add Memory
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Series
        </th>

        <th>
          Brand
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Memory speed
        </th>

        <th>
          Capacity
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ram_data.each do |a_ram_datum| %>
      <tr>

        <td>
          <%= a_ram_datum.series %>
        </td>

        <td>
          <%= a_ram_datum.brand %>
        </td>

        <td>
          <%= a_ram_datum.name %>
        </td>

        <td>
          <%= a_ram_datum.price %>
        </td>

        <td>
          <%= a_ram_datum.mem_speed %>
        </td>

        <td>
          <%= a_ram_datum.capacity %>
        </td>

        <td>
          <img src="<%= a_ram_datum.image %>" width="100" height="75">
        </td>

        <td>
          <a href="/ram_data/<%= a_ram_datum.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
