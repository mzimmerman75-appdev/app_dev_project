<div>
  <div>
    <h1>
      <%= @the_ram_datum.name %> Details
    </h1>

    <div>
      <div>
        <a href="/ram_data">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_ram_datum/<%= @the_ram_datum.id %>">
          Delete Memory
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Ram
      </dt>
      <dd>
        <%= @the_ram_datum.ram_id %>
      </dd>

      <dt>
        Part type
      </dt>
      <dd>
        <%= @the_ram_datum.part_type %>
      </dd>

      <dt>
        Series
      </dt>
      <dd>
        <%= @the_ram_datum.series %>
      </dd>

      <dt>
        Brand
      </dt>
      <dd>
        <%= @the_ram_datum.brand %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_ram_datum.name %>
      </dd>

      <dt>
        Item number
      </dt>
      <dd>
        <%= @the_ram_datum.item_number %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_ram_datum.price %>
      </dd>

      <dt>
        Mem speed
      </dt>
      <dd>
        <%= @the_ram_datum.mem_speed %>
      </dd>

      <dt>
        Capacity
      </dt>
      <dd>
        <%= @the_ram_datum.capacity %>
      </dd>

      <dt>
        Link
      </dt>
      <dd>
        <a href="<%= @the_ram_datum.link %>">part Link</a>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_ram_datum.image %>" width="350" height="225">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_ram_datum.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_ram_datum.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit This Memory
    </h2>

    <form action="/modify_ram_datum/<%= @the_ram_datum.id %>"  method="post" >
      <div>
        <label for="ram_id_box">
          Ram
        </label>

        <input type="text" id="ram_id_box" name="query_ram_id" value="<%= @the_ram_datum.ram_id %>">
      </div>

      <div>
        <label for="part_type_box">
          Part type
        </label>

        <input type="text" id="part_type_box" name="query_part_type" value="<%= @the_ram_datum.part_type %>">
      </div>

      <div>
        <label for="series_box">
          Series
        </label>

        <input type="text" id="series_box" name="query_series" value="<%= @the_ram_datum.series %>">
      </div>

      <div>
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="query_brand" value="<%= @the_ram_datum.brand %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_ram_datum.name %>">
      </div>

      <div>
        <label for="item_number_box">
          Item number
        </label>

        <input type="text" id="item_number_box" name="query_item_number" value="<%= @the_ram_datum.item_number %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_ram_datum.price %>">
      </div>

      <div>
        <label for="mem_speed_box">
          Mem speed
        </label>

        <input type="text" id="mem_speed_box" name="query_mem_speed" value="<%= @the_ram_datum.mem_speed %>">
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="text" id="capacity_box" name="query_capacity" value="<%= @the_ram_datum.capacity %>">
      </div>

      <div>
        <label for="link_box">
          Link
        </label>

        <input type="text" id="link_box" name="query_link" value="<%= @the_ram_datum.link %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_ram_datum.image %>">
      </div>

      <button>
        Update Memory
      </button>
    </form>
  </div>
</div>

<hr>
